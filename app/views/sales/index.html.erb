<h1>Company name: <%= @company.name %></h1>

<%= link_to("Import new file", new_company_transaction_file_path(@company)) %>
<h3>Sales</h3>

<table>
  <tr>
    <th>Purchaser Name</th>
    <th>Item Description</th>
    <th>Item Price</th>
    <th>Purchase Count</th>
    <th>Merchant Address</th>
    <th>Merchant Name</th>
  </tr>
  <% @sales.each do |sale| %>
    <tr>
      <td><%= sale.purchaser_name %></td>
      <td><%= sale.item_description %></td>
      <td><%= sale.item_price %></td>
      <td><%= sale.purchase_count %></td>
      <td><%= sale.merchant_address %></td>
      <td><%= sale.merchant_name %></td>
    </tr>
  <% end -%>
</table>
